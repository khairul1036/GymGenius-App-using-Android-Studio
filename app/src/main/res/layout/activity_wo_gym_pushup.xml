<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wo_gym_pushup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F80C0C0C"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F80C0C0C"
            android:orientation="vertical">
            <!--    header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:background="#000000"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/backBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:textSize="30dp"
                    android:background="@drawable/baseline_arrow_back"
                    android:layout_marginLeft="8dp"
                    android:onClick="backFunction"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="Workout"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_weight=".2"
                    android:background="@drawable/menu"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:onClick="profileFunction"/>
            </LinearLayout>
            <!--    header -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#0E0E0E"
                app:cardCornerRadius="25dp"
                android:onClick="TuckFrontLeverFunction">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:background="#0E0E0E">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/workout" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1.8"
                        android:text="Recommendation Repetitions"
                        android:textColor="#03A9F4"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="20"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginTop="15dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:orientation="vertical"-->
            <!--            android:padding="10dp">-->

            <!--            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView-->
            <!--                android:id="@+id/youtube_player_view"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:videoId="Qjxrp9Hwv_Q"-->
            <!--                app:autoPlay="false"-->
            <!--                />-->
            <!--        </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#171717">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Enter Your Repeat Count"
                    android:textColor="#03A9F4"
                    android:textStyle="italic"
                    android:textSize="22dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/repetitionCountBtnId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="20"
                    android:textColorHint="#7A7A7A"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#171717">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Repeat Count"
                    android:textColor="#03A9F4"
                    android:textStyle="italic"
                    android:textSize="22dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/displayrepetitionCountBtnId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="0"
                    android:textColorHint="#7A7A7A"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="#171717">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set your one repetition time:"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="italic"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/baseline_access_time_filled_24"
                        android:textSize="35dp"/>

                    <EditText
                        android:id="@+id/duration_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.6"
                        android:hint="Seconds!"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textColorHint="#7A7A7A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/countdown_timer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="00:00:00"
                        android:textSize="24dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/start_button"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"
                        android:text="Start Timer"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:onClick="startFunction"/>

                    <Button
                        android:id="@+id/reset_button"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:text="Reset Timer"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:onClick="resetFunction"/>
                </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>