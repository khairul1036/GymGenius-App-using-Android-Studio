<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sub_workout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_marginTop="30dp">
        <!--    header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:background="#000000"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/backBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:textSize="30dp"
                android:background="@drawable/baseline_arrow_back"
                android:layout_marginLeft="8dp"
                android:onClick="backFunction"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Workout"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:layout_weight=".2"
                android:background="@drawable/menu"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:onClick="profileFunction"/>

        </LinearLayout>
        <!--    header -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="dipsFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Dips"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="pullupsFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Pull Ups"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="halfburpeeFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Half Burpee"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="crunchFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Crunch"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="pushupsFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Push Ups"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="muscleupsFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Muscle Ups"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="TuckFrontLeverFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Tuck Front Lever"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#0E0E0E"
                    app:cardCornerRadius="25dp"
                    android:onClick="squatsFunction">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:background="#0E0E0E">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="@drawable/kettlebell" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.8"
                            android:text="Squats"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="35dp"
                            android:layout_weight=".2"
                            android:background="@drawable/arrow_point_right"
                            android:textSize="25dp"
                            android:layout_marginTop="5dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>