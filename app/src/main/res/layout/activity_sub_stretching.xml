<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sub_Stretching"
    android:background="#F2000000"
    android:orientation="vertical">

    <!--    header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#000000"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/backBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:textSize="30dp"
            android:background="@drawable/baseline_arrow_back"
            android:layout_marginLeft="8dp"
            android:onClick="backFunction"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="Stretching"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_weight=".2"
            android:background="@drawable/menu"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:onClick="profileFunction"/>
    </LinearLayout>
    <!--    header -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/stretching"
                android:layout_gravity="center"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#171717">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/baseline_access_time_filled_24"
                        android:textSize="35dp"/>

                    <EditText
                        android:id="@+id/repetitions_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.7"
                        android:hint="Repetitions"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textColorHint="#7A7A7A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="10dp"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="#171717">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/baseline_access_time_filled_24"
                        android:textSize="35dp"/>

                    <EditText
                        android:id="@+id/sets_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.7"
                        android:hint="Set"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textColorHint="#7A7A7A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="10dp"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="#171717">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/baseline_access_time_filled_24"
                        android:textSize="35dp"/>

                    <EditText
                        android:id="@+id/weight_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.7"
                        android:hint="Weight"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textColorHint="#7A7A7A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="10dp"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/baseline_access_time_filled_24"
                        android:textSize="35dp"/>

                    <EditText
                        android:id="@+id/notes_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.7"
                        android:hint="Notes"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textColorHint="#7A7A7A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="10dp"
                        android:inputType="text"/>

                </LinearLayout>

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="#3F51B5"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:onClick="saveExercise"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="#171717">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/baseline_access_time_filled_24"
                        android:textSize="35dp"/>

                    <EditText
                        android:id="@+id/duration_input"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.5"
                        android:hint="Seconds!"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textColorHint="#7A7A7A"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="10dp"
                        android:inputType="number"/>

                    <TextView
                        android:id="@+id/countdown_timer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="00:00:00"
                        android:textSize="24dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="#171717"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/start_button"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"
                        android:text="Start"
                        android:textColor="@color/white"
                        android:background="#C96000"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"/>

                    <Button
                        android:id="@+id/reset_button"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:text="Reset"
                        android:textColor="@color/white"
                        android:background="#960000"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
