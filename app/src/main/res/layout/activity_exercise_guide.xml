<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseGuide"
    android:background="@drawable/gym_home_bg_black"
    android:orientation="vertical"
    android:layout_marginTop="30dp">

    <!--    header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#000000"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/backBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:textSize="30dp"
            android:background="@drawable/baseline_arrow_back"
            android:layout_marginLeft="8dp"
            android:onClick="backFunction"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text="Exercise Guide"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_weight=".2"
            android:background="@drawable/menu"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:onClick="profileFunction"/>
    </LinearLayout>
    <!--    header -->

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/exerciseguideGYMBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            android:layout_margin="3dp"
            android:onClick="gymFunction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:src="@drawable/gym"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GYM"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/BodyWeightBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginTop="20dp"
            android:layout_margin="3dp"
            android:onClick="BodyWeightFunction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bodyweight"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Weight"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exerciseguideBattleRopeBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:onClick="battleropeFunction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bettlerope"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battle Rope"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exerciseguideBoxBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:onClick="boxFunction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:src="@drawable/box"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Box"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exerciseguideSuspensionBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:onClick="suspensionFunction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:src="@drawable/suspension"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suspension"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exerciseguideKettlebellBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="0"
            android:layout_columnWeight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:onClick="kettlebellFunction">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kettlebell"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kettlebell"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>
